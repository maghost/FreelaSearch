<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_inscricao"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="0dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_freelancer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/iv_freelancer"
                android:layout_width="0dp"
                android:layout_height="87dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/default_profile_bigger" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/tv_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/medium_margin"
                    android:paddingRight="@dimen/medium_margin"
                    android:paddingTop="12dp"
                    android:singleLine="true"
                    android:text="TÃ­tulo"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_freelancer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_titulo"
                    android:paddingLeft="@dimen/medium_margin"
                    android:paddingRight="@dimen/medium_margin"
                    android:paddingTop="3dp"
                    android:singleLine="true"
                    android:text="Freelancer"
                    android:textColor="@color/accent"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/tv_localizacao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_freelancer"
                    android:drawableLeft="@drawable/ic_my_location_16dp"
                    android:drawablePadding="@dimen/small_margin"
                    android:drawableStart="@drawable/ic_my_location_16dp"
                    android:paddingLeft="@dimen/medium_margin"
                    android:paddingRight="@dimen/medium_margin"
                    android:paddingTop="@dimen/small_margin"
                    android:singleLine="true"
                    android:text="Cidade, Estado"
                    android:textColor="@color/secondary_text"
                    android:textSize="13sp" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_descricao_freelancer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_freelancer"
            android:maxLines="3"
            android:padding="@dimen/medium_margin"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras pulvinar vel neque volutpat imperdiet. Duis at suscipit sem. Aliquam euismod velit quis justo pulvinar elementum. Aliquam ac ligula tincidunt, convallis tortor non, fermentum magna. Donec molestie semper mauris, a blandit orci ultrices vel. Phasellus fermentum velit nec quam aliquam sollicitudin. In nec enim elit. Curabitur volutpat mattis nibh, in eleifend velit. Nullam at quam aliquet, consectetur mauris cursus, tincidunt erat. Integer posuere tellus tortor."
            android:textColor="@color/secondary_text"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/ll_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_descricao_freelancer"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:orientation="horizontal"
            android:weightSum="9">

            <!-- Mensagem -->
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_mensagem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@color/accent"
                android:padding="@dimen/small_margin"
                android:text="Enviar Mensagem"
                android:textColor="@color/icons" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- Contratar -->
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_contratar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@color/btn_accent"
                android:padding="@dimen/small_margin"
                android:text="Contratar Freelancer"
                android:textColor="@color/icons" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>