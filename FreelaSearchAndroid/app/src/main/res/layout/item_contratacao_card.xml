<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_contratacao"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="0dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_ivs_contratacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/iv_anunciante"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/default_profile_bigger" />

            <ImageView
                android:id="@+id/iv_freelancer"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/default_profile_bigger" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_ivs_contratacao"
            android:maxLines="2"
            android:paddingLeft="@dimen/medium_margin"
            android:paddingRight="@dimen/medium_margin"
            android:paddingTop="@dimen/medium_margin"
            android:text="TÃ­tulo"
            android:textColor="@color/primary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_anunciante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_titulo"
            android:paddingLeft="@dimen/medium_margin"
            android:paddingRight="@dimen/medium_margin"
            android:paddingTop="@dimen/medium_margin"
            android:singleLine="true"
            android:text="Anunciante"
            android:textColor="@color/accent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_localizacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_anunciante"
            android:drawableLeft="@drawable/ic_place_24dp"
            android:drawablePadding="@dimen/small_margin"
            android:drawableStart="@drawable/ic_place_24dp"
            android:paddingLeft="@dimen/medium_margin"
            android:paddingRight="@dimen/medium_margin"
            android:paddingTop="@dimen/medium_margin"
            android:singleLine="true"
            android:text="Cidade, Estado"
            android:textColor="@color/primary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_localizacao"
            android:drawableLeft="@drawable/ic_list_24dp"
            android:drawablePadding="@dimen/small_margin"
            android:drawableStart="@drawable/ic_list_24dp"
            android:padding="@dimen/medium_margin"
            android:singleLine="true"
            android:text="Categoria"
            android:textColor="@color/primary"
            android:textSize="16sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>